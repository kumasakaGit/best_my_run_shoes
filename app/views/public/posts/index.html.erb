<h1>index</h1>
<% @posts.each do |post| %>
<table>
  <tr>
    <td><%= post.created_at.strftime('%Y/%m/%d') %></td>
    <td>
      <%= link_to public_user_path(post.user.id), class: "text-dark" do %>
        <%= post.user.nick_name %>
      <% end %>
    </td>
    <td>
      <%= link_to public_post_path(post.id), class: "text-dark" do %>
        <%= post.name %>
      <% end %>
    </td>
    <td>
      <p>評価:</p>
    </td>
    <td>
      <div id="post_raty-<%= post.id %>"></div>
      <script>
        var elem = document.getElementById('post_raty-<%= post.id %>');
        var opt = {
        starOn: "<%= asset_path('star-on.png') %>",
        starOff: "<%= asset_path('star-off.png') %>",
        starHalf: "<%= asset_path('star-half.png') %>",
        half: true,
        score: <%= post.evaluation %>,
        readOnly: true,
        };
        raty(elem,opt);
      </script>
    </td>
    <td><%= post.evaluation %></td>
    <td><%= post.comments.count %>コメント</td>
    <td><%= link_to "詳細", public_post_path(post.id) %></td>
  </tr>
</table>
<% end %>
