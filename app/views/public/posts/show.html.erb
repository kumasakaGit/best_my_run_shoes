<h1>詳細</h1>
<%= image_tag @post.photo_image_url, size: '200x200' %>
<table>
  <tr>
    <td><%= @post.name %></td>
  </tr>
  <tr>
    <td>
      <p>評価:<%= @post.evaluation %></P>
      <div id="post_raty"></div>
      <script>
        var elem = document.getElementById('post_raty');
        var opt = {
        starOn: "<%= asset_path('star-on.png') %>",
        starOff: "<%= asset_path('star-off.png') %>",
        starHalf: "<%= asset_path('star-half.png') %>",
        half: true,
        score: <%= @post.evaluation %>,
        readOnly: true,
        };
        raty(elem,opt);
      </script>
    </td>
    <td></td>
  </tr>
  <tr>
    <td><%= @post.comment %></td>
  </tr>
  <tr>
    <td>
      <% if @post.favorited_by?(current_user) %>
        <p>
          <%= link_to public_post_favorites_path(@post), method: :delete do %>
            ♥<%= @post.favorites.count %> いいね
          <% end %>
        </p>
        <% else %>
        <p>
          <%= link_to public_post_favorites_path(@post), method: :post do %>
            ♡<%= @post.favorites.count %> いいね
          <% end %>
        </p>
      <% end %>
    </td>
    <% if @post.user == current_user %>
      <td>
        <%= link_to "投稿を編集する", edit_public_post_path(@post) %>
      </td>
      <td>
        <%= link_to "削除", public_post_path(@post), method: :delete %>
      </td>
    <% end %>
  </tr>
</table>
<div>
  <p>コメント件数：<%= @post.comments.count %></p>
  <% @post.comments.each do |comment| %>
    <p><%= image_tag comment.user.get_profile_image(100,100) %></p>
    <%= comment.user.name %>
    <%= comment.created_at.strftime('%Y/%m/%d') %><%= comment.comment_content %>
    <% if comment.user == current_user %>
      <%= link_to "削除", public_post_comment_path(comment.post, comment), method: :delete %>
    <% end %>
  <% end %>
</div>
<div>
  <%= form_with model: [@post, @comment], url: public_post_comments_path do |f| %>
    <%= f.text_area :comment_content, rows: '5', placeholder: "コメントをここに" %>
    <%= f.submit "送信する" %>
  <% end %>
</div>