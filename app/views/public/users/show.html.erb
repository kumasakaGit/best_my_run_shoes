<div>
  <%= render 'sidebar', user: @user %>
</div>
<h1>シューズを検索して投稿</h1>
<div class="search-box">
  <%= form_with model: @shoe, url: public_shoes_search_path, method: :get, local: true do |f| %>
    <div class="form-group">
      <%= f.text_field :keyword, value: params[:keyword], class: "form-control" %>
      <%= f.submit '検索', class: "form-control btn btn-success" %>
    </div>
  <% end %>
</div>
<% if @shoes.present? %>
<h1><%= @user.nick_name %>さんの投稿一覧</h1>
<%= link_to '新着順', public_user_path(latest: "true") %>
<%= link_to '古い順', public_user_path(old: "true") %>
  <%= render "searches/search" %>
  <% @shoes.each do |shoe| %>
    <table>
      <tr>
        <td><%= shoe.created_at.strftime('%Y/%m/%d') %></td>
        <td>
          <%= link_to public_shoe_path(shoe.id), class: "text-dark" do %>
            <%= shoe.name %>
          <% end %>
        </td>
        <td><p>評価:</p></td>
        <td>
          <div id="post_raty-<%= shoe.id %>"></div>
          <script>
            var elem = document.getElementById('post_raty-<%= shoe.id %>');
            var opt = {
            starOn: "<%= asset_path('star-on.png') %>",
            starOff: "<%= asset_path('star-off.png') %>",
            starHalf: "<%= asset_path('star-half.png') %>",
            half: true,
            score: <%= shoe.evaluation %>,
            readOnly: true,
            };
            raty(elem,opt);
          </script>
        </td>
        <td><%= shoe.evaluation %></td>
        <td><%= link_to "詳細", public_shoe_path(shoe.id) %></td>
      </tr>
    </table>

  <% end %>
<% end %>