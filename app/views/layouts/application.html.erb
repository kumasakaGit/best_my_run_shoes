<!DOCTYPE html>
<html>
  <head>
    <title>BestMyRunShoes</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <script src="https://kit.fontawesome.com/62ac904f9a.js" crossorigin="anonymous"></script>
    <%= stylesheet_pack_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header>
      <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container">
          <a class="navbar-brand" href="/">
            <span>BestMyRunShoes</span>
          </a>
          <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavDropdown"
                        aria-controls="navbarNavDropdown" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
          </button>
          <div class="collapse navbar-collapse show" id="navbarNavDropdown">
            <ul class="navbar-nav ml-auto">
              <% if user_signed_in? %>
                <li class="nav-item">
                    <i class="fas fa-home"></i>
                    <span>Home</span>
                </li>
                <li class="nav-item">
                    <i class="fas fa-users"></i>
                    <span>Users</span>
                </li>
                <li class="nav-item">
                  <i class="fas fa-book-open"></i>
                    <span>Books</span>
                </li>
                <li class="nav-item">
                  <%= link_to destroy_user_session_path, method: :delete, class: "nav-link text-white" do %>
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Log out</span>
                  <% end %>
                </li>
              <% elsif admin_signed_in? %>
                <li class="nav-item">
                    <i class="fas fa-home"></i>
                    <span>Home</span>
                </li>
                <li class="nav-item">
                    <i class="fas fa-users"></i>
                    <span>Users</span>
                </li>
                <li class="nav-item">
                  <i class="fas fa-book-open"></i>
                    <span>Books</span>
                </li>
                <li class="nav-item">
                  <%= link_to destroy_admin_session_path, method: :delete, class: "nav-link text-white" do %>
                    <i class="fas fa-sign-out-alt"></i>
                    <span>Log out</span>
                  <% end %>
                </li>
              <% else %>
                <li class="nav-item">
                  <%= link_to root_path, class: "nav-link text-white" do %>
                    <i class="fas fa-home"></i>
                    <span>Home</span>
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to new_user_registration_path, class: "nav-link text-white" do %>
                    <i class="fas fa-user-plus"></i>
                    <span>Sign up</span>
                  <% end %>
                </li>
                <li class="nav-item">
                  <%= link_to new_user_session_path, class: "nav-link text-white" do %>
                    <i class="fas fa-sign-in-alt"></i>
                    <span>Log in</span>
                  <% end %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </nav>
    </header>
    <%= yield %>
  </body>
</html>
