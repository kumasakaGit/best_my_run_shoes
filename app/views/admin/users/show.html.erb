<h1><%= @user.nick_name %>さんの投稿一覧</h1>
<% if @shoes.present? %>
  <% @shoes.each do |shoe| %>
    <table>
      <tr>
        <td><%= shoe.created_at.strftime('%Y/%m/%d') %></td>
        <td>
          <%= link_to admin_shoe_path(shoe.id), class: "text-dark" do %>
            <%= shoe.name %>
          <% end %>
        </td>
        <td><p>評価:</p></td>
        <td>
          <div id="post_raty-<%= shoe.id %>"></div>
          <script>
            var elem = document.getElementById('post_raty-<%= shoe.id %>');
            var opt = {
            starOn: "<%= asset_path('star-on.png') %>",
            starOff: "<%= asset_path('star-off.png') %>",
            starHalf: "<%= asset_path('star-half.png') %>",
            half: true,
            score: <%= shoe.evaluation %>,
            readOnly: true,
            };
            raty(elem,opt);
          </script>
        </td>
        <td><%= shoe.evaluation %></td>
        <td><%= link_to "詳細", admin_shoe_path(shoe.id) %></td>
      </tr>
    </table>

  <% end %>
<% end %>