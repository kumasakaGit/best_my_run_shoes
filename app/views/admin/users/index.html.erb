<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-8 mt-5 mx-auto">
<h2>会員一覧</h2>
  <table class="table table-borderless">
        <thead class="thead-light">
          <tr>
            <th>会員ID</th>
            <th>氏名</th>
            <th>メールアドレス</th>
            <th>ステータス</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do |user| %>
          <tr>
            <td><%= user.id %></td>
            <td>
              <%= link_to admin_user_path(user.id), class: "text-dark" do %>
              <%= user.nick_name %>
              <% end %>
            </td>
            <td><%= user.email %></td>
            <td><%= link_to "詳細", admin_user_path(user.id) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
</div>
